<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
    <h2 class="text-2xl font-bold text-center text-blue-600 mb-6">Forgot your password?</h2>

    <%= form_with scope: :user, url: password_path(resource_name), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" %>
      </div>

      <%= f.submit "Send me reset instructions", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition" %>
    <% end %>

    <p class="text-center text-gray-600 mt-4 text-sm">
      Remembered your password?
      <%= link_to "Login", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>
