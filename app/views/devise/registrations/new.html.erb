
  <div class="bg-white shadow rounded-lg px-15 pt-5 pb-5 mt-20 mx-auto" style="width: 500px;">
    <h2 class="text-2xl font-bold text-center text-blue-600 mb-6">Sign Up</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" %>
      </div>

      <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition" %>
    <% end %>

    <p class="text-center text-gray-600 mt-4 text-sm">
      Already have an account?
      <%= link_to "Login", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
    </p>
  </div>

