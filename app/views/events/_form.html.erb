<%= form_with model: @event do |form| %>
  <% if event.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <p><strong><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</strong></p>
      <ul class="list-disc pl-5">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :date, class: "block text-gray-700" %>
    <%= form.date_field :date, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :location, class: "block text-gray-700" %>
    <%= form.text_field :location, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: "block text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded shadow-sm" %>
  </div>

  <div class="flex space-x-2">
  <%= form.submit "Save Event", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

  <%= link_to "Cancel",
            (request.referer || events_path),
            class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
</div>
<% end %>
