<h1 class="text-2xl font-bold mb-4">Edit Event</h1>

<%= form_with model: [:admin, @event], local: true, class: "space-y-4" do |form| %>
  <div class="mb-4">
    <%= form.label :name, "Event Name", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "border rounded p-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :start_date, class: "border rounded p-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :end_date, class: "border rounded p-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :location, class: "border rounded p-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "border rounded p-2 w-full", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, options_for_select([["Ongoing", "ongoing"], ["Closed", "closed"]], @event.status),
                    {}, class: "border rounded p-2 w-full" %>
  </div>

  <div>
    <%= form.submit "Update Event", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to "Back", admin_events_path, class: "ml-2 text-blue-600 hover:underline" %>
  </div>
<% end %>
