<div class="bg-white shadow rounded-lg px-15 pt-5 pb-5 mt-20 mx-auto" style="width: 500px;">
  <h2 class="text-2xl font-bold mb-6 text-center text-blue-600">Login to Your Account</h2>

  <%= form_with scope: :user, url: session_path(:user), local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, required: true, class: "w-full border-gray-300 rounded shadow-sm focus:ring focus:border-blue-300" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", required: true, class: "w-full border-gray-300 rounded shadow-sm focus:ring focus:border-blue-300" %>
    </div>

    <div class="flex items-center justify-between">
      <label class="inline-flex items-center text-gray-700">
        <%= f.check_box :remember_me, class: "mr-2" %>
        Remember me
      </label>
      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
    </div>

    <div>
      <%= f.submit "Login", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <p class="text-center mt-4 text-gray-600">
    Donâ€™t have an account?
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
  </p>
</div>
